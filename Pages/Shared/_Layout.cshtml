<!DOCTYPE html>
@using Microsoft.AspNetCore.Http
@using ViesbucioPuslapis.Models
@inject IHttpContextAccessor HttpContextAccessor
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ViesbucioPuslapis</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ViesbucioPuslapis.styles.css" asp-append-version="true" />
    <link href="https://cdn.datatables.net/1.12.1/css/jquery.dataTables.min.css" rel="stylesheet"/>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>   
    <script src="https://cdn.datatables.net/1.12.1/js/jquery.dataTables.min.js"></script>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">Viešbutis</a>
                
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        <ul class="navbar-nav flex-grow-1">


@*                        @if (HttpContextAccessor.HttpContext.Session.GetString("user") != null)
                        {*@
                        @if (HttpContextAccessor.HttpContext.Session.GetString("user") != null)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-page="/RoomSystem/OwnedReservation">Jūsų rezervacija</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-page="/RoomSystem/RoomTypes">Kambarių tipai</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-page="/GymSystem/GymIndex">Sporto salė</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-page="/ParkingSystem/ParkingReservationView">Parkingas</a>
                            </li>
                        }
                        @*}*@
                        @*ADMINO FUNKCIJOS*@
                        @if (HttpContextAccessor.HttpContext.Session.GetString("admin") != null)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-page="/ClientSystem/ClientsList">Klientų sąrašas</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-page="/RoomSystem/RoomReport">Kambarių ataskaita</a>
                            </li>
                        }
                        </ul>
                    </div>

             
                <div class="d-flex">
                    @if (HttpContextAccessor.HttpContext.Session.GetString("user") != null)
                    {
                        <span class="nav-link text-dark">Prisijungęs: @(HttpContextAccessor.HttpContext.Session.GetComplexData<User>("user").elektroninis_paštas)</span>
                        <a class="nav-link text-dark" asp-area="" asp-page="/Logout">Atsijungti</a>
                    }
                    else
                    {
                        <a class="nav-link text-dark" asp-area="" asp-page="/Login">Prisijungti</a>
                        <a class="nav-link text-dark" asp-area="" asp-page="/Register">Registruotis</a>
                    }
                </div>
                
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - ViesbucioPuslapis - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
