@page
@model ViesbucioPuslapis.Pages.ClientSystem.EditClientModel
@{
    ViewData["Title"] = "Redaguoti kliento informaciją";
}

<h1>@ViewData["Title"]</h1>
<form method="post" asp-page-handler="OnPost">
@if (Model.Client != null && Model.User != null)
{
    <form method="post">
        <div class="form-group">
            <label for="name">Vardas</label>
            <input type="text" class="form-control" id="name" name="naudotojo_vardas" value="@Model.User.naudotojo_vardas" required>
        </div>
        <div class="form-group">
            <label for="surname">Pavardė</label>
            <input type="text" class="form-control" id="surname" name="naudotojo_pavarde" value="@Model.User.naudotojo_pavarde" required>
        </div>
        <div class="form-group">
            <label for="email">Elektroninis paštas</label>
            <input type="email" class="form-control" id="email" name="elektroninis_paštas" value="@Model.User.elektroninis_paštas" required>
        </div>
        <div class="form-group">
            <label for="password">Slaptažodis</label>
            <input type="text" class="form-control" id="password" name="slaptažodis" value="@Model.User.slaptažodis" required>
        </div>
        <div class="form-group">
            <label for="phonenum">Telefono numeris</label>
            <input type="tel" class="form-control" id="phonenum" name="kliento_telefono_numeris" value="@Model.Client.kliento_telefono_numeris" required>
        </div>
        <div class="form-group">
            <label for="date">Gimimo data</label>
            <input type="date" class="form-control" id="date" name="kliento_gimimo_data" value="@Model.Client.kliento_gimimo_data.ToString("yyyy-MM-dd")" required>
        </div>
        <!-- Include other client editing fields as needed -->

        <button type="submit" class="btn btn-primary">Išsaugoti</button>
    </form>
}
</form>
