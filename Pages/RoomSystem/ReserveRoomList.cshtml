@page
@model ViesbucioPuslapis.Pages.RoomSystem.ReserveRoomListModel
@{
    ViewData["Title"] = "Kambarių sąrašas";
}

<div class="text-center">
    <h1 class="display-4">Pasirinkti "@Model.roomType" tipo kambarį</h1>

    @if (Model.rooms != null && Model.rooms.Count > 0)
    {
        <div class="row align-content-center">
            <table class="table">
                <thead>
                    <tr>
                        <th>Kambario numeris</th>
                        <th>Nakties kaina</th>
                        <th>Vietų kiekis</th>
                        <th></th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var room in Model.rooms)
                    {
                        <tr>
                            <td>@room.kambario_numeris</td>
                            <td>@room.nakties_kaina</td>
                            <td>@room.vietu_kiekis</td>
                            <td>
                                <form id="reserveroom" method="post" role="form">
                                    <input type="hidden" id="start" name="start" value="@Model.startDate">
                                    <input type="hidden" id="end" name="end" value="@Model.endDate">
                                    <button class="btn btn-success" type="submit" name="roomnr" value='@room.kambario_numeris'>
                                        Rezervuoti
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <p>Nėra šio tipo laisvų kambarių pasirinktu laikotarpiu.</p>
    }

    <a class="text-dark" asp-area="" asp-page="/RoomSystem/RoomType" asp-route-roomid="@Model.roomId">Grįžti</a>
