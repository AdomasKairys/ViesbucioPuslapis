@page
@model ViesbucioPuslapis.Pages.RoomSystem.ReserveRoomModel
@{
    ViewData["Title"] = "Kambario rezervacija";
}

<div class="text-center">
    <h1 class="display-4">Rezervuoti @Model.RoomNr kambarį</h1>

    <div class="row justify-content-start">
        <div class="col-sm-2">
            <a class="btn btn-danger" href="/Index" role="button">Atšaukti</a>
        </div>
    </div>

    <form method="post">
        <!-- Pridėkite formą -->
        <div class="row align-content-center">
            <table class="table">
                <thead>
                    <tr>
                        <th>Kambario numeris</th>
                        <th>Vietų kiekis</th>
                        <th>Rezervacijos kaina</th>
                        <th></th>
                    </tr>
                </thead>

                <tbody>
                    <tr>
                        <td>@Model.RoomNr</td>
                        <td>@Model.days</td>
                        <td>@Model.reservationCost</td>
                    </tr>
                </tbody>
            </table>
        </div>

        <div class="row justify-content-end">
            <div class="col-sm-2">
                <button class="btn btn-primary" type="submit">Rezervuoti</button> <!-- Pridekite type="submit" -->
            </div>
            
        </div>
    </form> <!-- Uždarykite formą -->
</div>
